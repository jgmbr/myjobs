{% extends "MyJobsAdminBundle::layout.html.twig" %}

{% block header %}
    MyJobs - Mon Compte - Mes candidatures
{% endblock %}

{% block menu %}
    {% include 'MyJobsAdminBundle:Account:menu.html.twig' %}
{% endblock %}

{% block body %}
    <h1>Mon Compte › Mes candidatures › Supprimer</h1>

    <p>
        Etes-vous certain de vouloir supprimer la candidature "{{ application.name }}" ?
    </p>

    <div class="well">
    {{ form_start(delete_form) }}
        <a href="{{ path('application_index') }}">Retour à la liste des candidatures</a>
        <input type="submit" value="Oui, je confirme la suppression">
        {{ form_rest(delete_form) }}
    {{ form_end(delete_form) }}
    </div>

{% endblock %}
