{% extends "MyJobsAdminBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block header %}
    MyJobs - Mon Compte - Profil
{% endblock %}

{% block menu %}
    {% include 'MyJobsAdminBundle:Account:menu.html.twig' %}
{% endblock %}

{% block body %}

    <ol class="breadcrumb">
        <li> <a href="{{ path('account_home_page') }}"> Mon Compte </a> </li>
        <li class="active"> Profil </li>
    </ol>

    <div class="fos_user_user_show">
        <p> <i class="fa fa-user-circle-o fa-4x" aria-hidden="true"></i> </p>
        <p> {{ 'profile.show.username'|trans }}: {{ user.username }} </p>
        <p> {{ 'profile.show.email'|trans }}: {{ user.email }} </p>
        <p> <a href="{{ path('account_profil_edit') }}" class="btn btn-warning"><i class="fa fa-pencil" aria-hidden="true"></i></a> </p>
    </div>

{% endblock %}