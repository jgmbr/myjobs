{% extends "MyJobsAdminBundle::layout.html.twig" %}

{% block header %}
    MyJobs - Mon Compte - Mes entreprises
{% endblock %}

{% block menu %}
    {% include 'MyJobsAdminBundle:Account:menu.html.twig' %}
{% endblock %}

{% block body %}
    <h1>Mon Compte › Mes entreprises › Fiche</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ company.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ company.name }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ company.address1 }}</td>
            </tr>
            <tr>
                <th>Complément d'adresse</th>
                <td>{{ company.address2 }}</td>
            </tr>
            <tr>
                <th>Code postal</th>
                <td>{{ company.postcode }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ company.city }}</td>
            </tr>
            <tr>
                <th>Pays</th>
                <td>{{ company.country }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td><a href="mailto:{{ company.email }}"> {{ company.email }} </a></td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ company.phone }}</td>
            </tr>
            <tr>
                <th>Site web</th>
                <td><a href="http://{{ company.website }}" target="_blank"> {{ company.website }} </a></td>
            </tr>
            <tr>
                <th>Contact</th>
                <td>{{ company.contact }}</td>
            </tr>
            <tr>
                <th>Commentaire</th>
                <td>{{ company.comment }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{% if company.createdAt %}{{ company.createdAt|date('d/m/Y à H:i') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Date de modification</th>
                <td>{% if company.updatedAt %}{{ company.updatedAt|date('d/m/Y à H:i') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('company_index') }}">Retour à la liste des entreprises</a>
        </li>
        <li>
            <a href="{{ path('company_edit', { 'id': company.id }) }}">Modifier</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
