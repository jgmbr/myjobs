{% extends "MyJobsAdminBundle::layout.html.twig" %}

{% block header %}
    MyJobs - Administration - Contrats
{% endblock %}

{% block menu %}
    {% include 'MyJobsAdminBundle:Admin:menu.html.twig' %}
{% endblock %}

{% block body %}
    <h1>Administration › Contrats › Supprimer</h1>

    <p>
        Etes-vous certain de vouloir supprimer le contrat "{{ contract.name }}" ?
    </p>

    <div class="well">
    {{ form_start(delete_form) }}
        <a href="{{ path('contract_index') }}">Retour à la liste des contrats</a>
        <input type="submit" value="Oui, je confirme la suppression">
        {{ form_rest(delete_form) }}
    {{ form_end(delete_form) }}
    </div>

{% endblock %}
