{% extends "JGFrontBundle::layout.html.twig" %}

{% block title %}
    {{ parent() }}
{% endblock %}

{% block type %}home{% endblock %}

{% block body %}

    <header>
        <div class="header-content">
            <div class="header-content-inner">
                <h1 id="homeHeading">Gérer vos candidatures <br /> lors de vos recherches d'emploi</h1>
                <hr>
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    {% if is_granted("ROLE_ADMIN") %}
                        <a href="{{ path('admin_home_page') }}" class="btn btn-primary btn-xl page-scroll"> Administration &nbsp; <i class="fa fa-cogs" aria-hidden="true"></i> </a>
                    {% else %}
                        <a href="{{ path('account_home_page') }}" class="btn btn-primary btn-xl page-scroll">  Mon compte &nbsp; <i class="fa fa-user" aria-hidden="true"></i> </a>
                    {% endif %}
                {% else %}
                    <a href="{{ path('fos_user_security_login') }}" class="btn btn-primary btn-xl page-scroll"> Connexion &nbsp; <i class="fa fa-sign-in" aria-hidden="true"></i> </a>
                    &nbsp;
                    <a href="{{ path('fos_user_registration_register') }}" class="btn btn-primary btn-xl page-scroll"> Inscription &nbsp; <i class="fa fa-user-plus" aria-hidden="true"></i> </a>
                {% endif %}
            </div>
        </div>
    </header>

    <section id="services">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Services</h2>
                    <hr class="primary">
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-6 text-center">
                    <div class="service-box">
                        <i class="fa fa-4x fa-building-o text-primary sr-icons"></i>
                        <h3>Entreprises</h3>
                        <p class="text-muted">Créer votre carnet d'entreprises</p>
                        <hr />
                        <ul class="unstyled">
                            <li>› Visualiser vos fiches entreprises</li>
                            <li>› Exporter vos entreprises au format csv</li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 text-center">
                    <div class="service-box">
                        <i class="fa fa-4x fa-list-alt text-primary sr-icons"></i>
                        <h3>Candidatures</h3>
                        <p class="text-muted">Créer vos candidatures</p>
                        <hr />
                        <ul class="unstyled">
                            <li>› Visualiser vos fiches candidatures</li>
                            <li>› Consulter les statuts de vos candidatures</li>
                            <li>› Exporter vos candidatures au format csv</li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 text-center">
                    <div class="service-box">
                        <i class="fa fa-4x fa-calendar text-primary sr-icons"></i>
                        <h3>Entretiens</h3>
                        <p class="text-muted">Créer votre agenda d'entretiens</p>
                        <hr />
                        <ul class="unstyled">
                            <li>› Visualiser votre calendrier d'entretiens programmés</li>
                            <li>› Consulter les statuts de vos entretiens</li>
                            <li>› Exporter vos entretiens au format csv</li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 text-center">
                    <div class="service-box">
                        <i class="fa fa-4x fa-bar-chart text-primary sr-icons"></i>
                        <h3>Statistiques</h3>
                        <p class="text-muted">Consulter et exporter</p>
                        <hr />
                        <ul class="unstyled">
                            <li>› Exporter vos données au format csv</li>
                            <li>› Exporter vos données au format zip</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="start" class="bg-primary">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 text-center">
                    <h2 class="section-heading">Tableau de bord</h2>
                    <hr class="light">
                    <p class="text-faded">Créer et développer vos candidatures dès maintenant à partir de l'application MyJobs !</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 app">
                    <img src="{{ asset('assets/img/Dashboard-App.PNG') }}" class="img-responsive sr-img" />
                </div>
                <div class="col-lg-8 col-lg-offset-2 text-center">
                    <a href="{{ path('fos_user_security_login') }}" class="page-scroll btn btn-default btn-xl sr-button">C'est parti !</a>
                </div>
            </div>
        </div>
    </section>

    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 text-center">
                    <h2 class="section-heading">Contact</h2>
                    <hr class="primary">
                    <p>Une question ? Une suggestion ? Une remarque ? Un coucou ? Ecrivez-moi !</p>
                </div>
                <div class="col-lg-8 col-lg-offset-2">
                    {{ form_start(formContact, {'attr': {'class': '', 'role': 'form'}}) }}
                    <div class="box-body">
                        {{ form_widget(formContact) }}
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Envoyer" name="sendMessage" id="sendMessage" class="btn btn-xl btn-primary sr-button" />
                    </div>
                    {{ form_end(formContact) }}
                </div>
            </div>
        </div>
    </section>

{% endblock %}