{% extends "JGAdminBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block header %}
    Profil
{% endblock %}

{% block menu %}
    {% include 'JGAdminBundle:Admin:menu.html.twig' %}
{% endblock %}

{% block body %}

    <ol class="breadcrumb">
        <li> <a href="{{ path('admin_home_page') }}"> Administration </a> </li>
        <li class="active"> Profil </li>
    </ol>


    <div class="box box-default">
        <div class="box-body box-profile">

            <table class="table table-responsive">
                <tbody>
                <tr>
                    <th> &nbsp; </th>
                    <td>
                        {% if app.user.picture is null %}
                            <i class="fa fa-user-circle fa-5x profile-user-img-default" aria-hidden="true"></i>
                        {% else %}
                            <img src="{{ asset('uploads/profiles/' ~ user.picture) }}" class="profile-user-img img-responsive img-circle" width="150" alt="User profile picture" />
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th> {{ 'profile.show.username'|trans }} </th>
                    <td> {{ user.username }} </td>
                </tr>
                <tr>
                    <th> {{ 'profile.show.email'|trans }} </th>
                    <td> {{ user.email }} </td>
                </tr>
                <tr>
                    <th> {{ 'profile.show.lastname'|trans }} </th>
                    <td> {{ user.lastname }} </td>
                </tr>
                <tr>
                    <th> {{ 'profile.show.firstname'|trans }} </th>
                    <td> {{ user.firstname }} </td>
                </tr>
                </tbody>
            </table>

        </div>
        <!-- /.box-body -->
    </div>

    <div class="actions">
        <a href="{{ path('admin_profil_edit') }}" class="btn btn-warning pull-right">
            <i class="fa fa-pencil" aria-hidden="true"></i> &nbsp; Modifier
        </a>
    </div>

{% endblock %}