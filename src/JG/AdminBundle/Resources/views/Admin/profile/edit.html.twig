                <input type="submit" value="{{ 'profile.edit.submit'|trans }}" class="btn btn-primary" />
            </div>
        {{ form_end(form) }}
    </div>

    <p> <a href="{{ path('admin_profil') }}" class="btn btn-default"> Retour Ã  mon profil </a> </p>

{% endblock %}