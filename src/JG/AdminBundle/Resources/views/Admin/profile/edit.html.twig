{% extends "JGAdminBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block header %}
    Profil
{% endblock %}

{% block menu %}
    {% include 'JGAdminBundle:Admin:menu.html.twig' %}
{% endblock %}

{% block body %}

    <ol class="breadcrumb">
        <li> <a href="{{ path('admin_home_page') }}"> Administration </a> </li>
        <li> <a href="{{ path('admin_profil') }}"> Profil </a> </li>
        <li class="active"> Editer </li>
    </ol>

    <div class="box box-default">
        {{ form_start(form, { 'action': path('admin_profil_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}
        <div class="box-body">
            {{ form_widget(form) }}
        </div>
        <div class="box-footer">
            <input type="submit" value="{{ 'profile.edit.submit'|trans }}" class="btn btn-warning" />
        </div>
        {{ form_end(form) }}
    </div>

    <div class="actions">
        <a href="{{ path('admin_profil') }}" class="btn btn-primary pull-left">
            <i class="fa fa-chevron-left" aria-hidden="true"></i> &nbsp; Retour Ã  mon profil
        </a>
    </div>

{% endblock %}