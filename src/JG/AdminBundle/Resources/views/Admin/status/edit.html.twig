{% extends "JGAdminBundle::layout.html.twig" %}

{% block header %}
    Status
{% endblock %}

{% block menu %}
    {% include 'JGAdminBundle:Admin:menu.html.twig' %}
{% endblock %}

{% block body %}

    <ol class="breadcrumb">
        <li> <a href="{{ path('admin_home_page') }}"> Administration </a> </li>
        <li> <a href="{{ path('status_index') }}"> Status </a> </li>
        <li class="active"> Editer </li>
    </ol>

    <div class="box box-default">
        {{ form_start(edit_form, {'attr': {'class': '', 'role': 'form'}}) }}
        <div class="box-body">
            {{ form_widget(edit_form) }}
        </div>
        <div class="box-footer">
            <input type="submit" value="Mettre à jour" class="btn btn-warning" />
        </div>
        {{ form_end(edit_form) }}
    </div>

    <div class="actions">
        <a href="{{ path('status_index') }}" class="btn btn-primary pull-left">
            <i class="fa fa-chevron-left" aria-hidden="true"></i> &nbsp; Retour à la liste des statuts
        </a>
    </div>

{% endblock %}
