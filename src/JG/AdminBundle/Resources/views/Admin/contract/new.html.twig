{% extends "JGAdminBundle::layout.html.twig" %}

{% block header %}
    Contrats
{% endblock %}

{% block menu %}
    {% include 'JGAdminBundle:Admin:menu.html.twig' %}
{% endblock %}

{% block body %}

    <ol class="breadcrumb">
        <li> <a href="{{ path('admin_home_page') }}"> Administration </a> </li>
        <li> <a href="{{ path('contract_index') }}"> Contrats </a> </li>
        <li class="active"> Ajouter </li>
    </ol>

    <div class="box box-default">
        <div class="box-header with-border"> <h3 class="box-title">Nouveau contrat</h3> </div>
        {{ form_start(form, {'attr': {'class': '', 'role': 'form'}}) }}
        <div class="box-body">
            {{ form_widget(form) }}
        </div>
        <div class="box-footer">
            <input type="submit" value="Créer" class="btn btn-success" />
        </div>
        {{ form_end(form) }}
    </div>

    <div class="actions">
        <a href="{{ path('contract_index') }}" class="btn btn-primary pull-left">
            <i class="fa fa-chevron-left" aria-hidden="true"></i> &nbsp; Retour à la liste des contrats
        </a>
    </div>

{% endblock %}
