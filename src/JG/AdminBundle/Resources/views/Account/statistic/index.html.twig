{% extends "JGAdminBundle::layout.html.twig" %}

{% block header %}
    Mes statistiques
{% endblock %}

{% block menu %}
    {% include 'JGAdminBundle:Account:menu.html.twig' %}
{% endblock %}

{% block body %}

    <ol class="breadcrumb">
        <li> <a href="{{ path('account_home_page') }}"> Mon Compte </a> </li>
        <li class="active"> Mes Statistiques </li>
    </ol>

    <div class="box">
        <div class="box-body">

            <p> [ nbEntreprises ] <input class="knob" value="{{ nbCompanies }}" data-readonly="true" data-thickness=".4" data-fgColor="#ff6347" data-width="100" data-height="100" /> </p>

            <p> [ nbCandidatures ] <input class="knob" value="{{ nbApplications }}" data-readonly="true" data-thickness=".4" data-fgColor="#ff6347" data-width="100" data-height="100" /> </p>

            <p> [ nbCandidatures en cours ] </p>

            <p> [ nbCandidatures validées ] </p>

            <p> [ nbCandidatures refusées ] </p>

            <p> [ nbCandidatures CDI ] </p>

            <p> [ nbCandidatures CDD ] </p>

            <p> [ nbCandidatures Stage ] </p>

            <p> [ nbEntretiens ] <input class="knob" value="{{ nbAppointments }}" data-readonly="true" data-thickness=".4" data-fgColor="#ff6347" data-width="100" data-height="100" /> </p>

            <p> [ nbEntretiens confirmés ] </p>

            <p> [ nbEntretiens en attente ] </p>

            <p> [ nbEntretiens annulés ] </p>

        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/vendor/jquery-knob/dist/jquery.knob.min.js') }}"></script>
    <script type="text/javascript">
        $(function () {
            $('.knob').knob();
        });
    </script>
{% endblock %}