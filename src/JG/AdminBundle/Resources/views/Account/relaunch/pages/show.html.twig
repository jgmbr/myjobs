{% extends 'base.html.twig' %}

{% block body %}
    <h1>Relaunch</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ relaunch.id }}</td>
            </tr>
            <tr>
                <th>Dateat</th>
                <td>{% if relaunch.dateAt %}{{ relaunch.dateAt|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Hourat</th>
                <td>{% if relaunch.hourAt %}{{ relaunch.hourAt|date('H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ relaunch.comment }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if relaunch.createdAt %}{{ relaunch.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if relaunch.updatedAt %}{{ relaunch.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('relaunch_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('relaunch_edit', { 'id': relaunch.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
