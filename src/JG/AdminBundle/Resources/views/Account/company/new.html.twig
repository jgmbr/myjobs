{% extends "JGAdminBundle::layout.html.twig" %}

{% block header %}
    Mes entreprises
{% endblock %}

{% block menu %}
    {% include 'JGAdminBundle:Account:menu.html.twig' %}
{% endblock %}

{% block body %}

    <ol class="breadcrumb">
        <li> <a href="{{ path('account_home_page') }}"> Mon Compte </a> </li>
        <li> <a href="{{ path('company_index') }}"> Mes entreprises </a> </li>
        <li class="active"> Ajouter </li>
    </ol>

    <div class="box box-default">
        <div class="box-header with-border"> <h3 class="box-title">Nouvelle entreprise</h3> </div>
        {{ form_start(form, {'attr': {'class': '', 'role': 'form'}}) }}
            <div class="box-body">
                {{ form_widget(form) }}
            </div>
            <div class="box-footer">
                <input type="submit" value="Créer" class="btn btn-success" />
            </div>
        {{ form_end(form) }}
    </div>

    <div class="actions">
        <a href="{{ path('company_index') }}" class="btn btn-primary pull-left">
            <i class="fa fa-chevron-left" aria-hidden="true"></i> &nbsp; Retour à la liste des entreprises
        </a>
    </div>

{% endblock %}
